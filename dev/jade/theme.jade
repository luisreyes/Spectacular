  title Spectacular
  meta(charset="utf-8")
  meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
  //- |{block:Description}
  //- meta(name="description" content="{MetaDescription}")
  //- |{/block:Description}
  
  link(rel="shortcut icon" type="image/x-icon" href="{Favicon}")
  link(rel="alternate" type="application/rss+xml" href="{RSS}")
  each link in stylesheet
    link(rel="stylesheet" type="text/css" href=link)

  //-include theme_options
  //-include styles

body
  
  nav#app-mobile-navigation.visible-xs
    section.mobile-navigation
      include mobile-menu

  main#app-main.container-fluid

    //- Mobile Scroll Indicator
    section.scroll-indicator.visible-xs
      i.fa.fa-chevron-up.first-icon
      i.fa.fa-chevron-up.second-icon
    
    //- Global Wrapper
    section.main-container.row
      
      //- Large Section with Background Image and
      div#app-header-content.column-left.col-sm-7.col-xs-12
        header#app-header
          section.header-meta-wrapper
            div.header-meta-container
              div.header-avatar
                img(src="images/avatar.png")
              div.header-description 
                h3.text-uppercase 
                  | Spectacular Tumblr Theme
          section.header-image

      //- Large Section with Posts and Other Page Contents
      div#app-page-content.column-right.col-sm-5.col-xs-12
        section.header-navigation.hidden-xs
          include main-menu
          
        aside#app-aside
          include aside
        footer#app-footer
          include footer
    
  
  include scripts
  each script in scripts
    script(type="text/javascript" src=script)


    
